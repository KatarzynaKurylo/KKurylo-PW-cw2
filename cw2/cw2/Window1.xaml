        <Label Content="Marka:" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Height="27" Width="71"/>
        <Label Content="Polisa:" HorizontalAlignment="Left" Margin="126,293,0,0" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="Ferrari" Content="Ferrari" HorizontalAlignment="Left" Margin="126,92,0,0" VerticalAlignment="Top" Checked="Ferrari_Checked" Height="34" Width="75"/>
        <Label Content="Cena:" HorizontalAlignment="Left" Margin="521,231,0,0" VerticalAlignment="Top"/>

